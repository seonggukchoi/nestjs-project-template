{
  "compilerOptions": {
    "strict": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist/",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/modules/*": ["./src/modules/*"],
      "@app/common/*": ["./src/common/*"],
      "@app/business/*": ["./src/business/*"],
      "@app/models/*": ["./src/models/*"],
      "@app/api/*": ["./src/api/*"],
      "@app/graphql/*": ["./src/graphql/*"]
    }
  },
  "exclude": ["./node_modules/", "./dist/"]
}
